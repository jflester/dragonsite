<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
	  <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
	</section>
	<section>
	  <%= render 'shared/statstaking' %>
	</section>
  </aside>
  <div class="span8">
	<h3><%= @title %></h3>
	<% if @courses.any? %>
	  <ul class="users" %>
		<%= render @courses %>
	  </ul>
	  <%= will_paginate @courses %>
	<% end %>
  </div>
</div>